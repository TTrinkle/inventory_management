<p id="notice"><%= notice %></p>

<h1 class='title'>Unique Greek Letter Inventory</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Type</th>
      <th>Letter</th>
      <th>Color</th>
      <th>Count</th>
      <th>Delete</th>
      <th>Add Set</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <% if letter.position == 'front' %>
        <tr>
          <td><%= letter.name %></td>
          <td><%= letter.color %></td>
          <td><%= letter.number %></td>
          <!-- <td><%= link_to 'Show', letter %></td> -->
          <td><%= link_to edit_letter_path(letter), class: 'btn btn-default' do %>
            <i class='glyphicon glyphicon-pencil'></i>
            <% end %>
          </td>
          <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Add Set', letter, method: :add_set, data: {confirm: "Are you sure we ordered this?"} %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
