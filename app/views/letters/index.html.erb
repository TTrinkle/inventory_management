<p id="notice"><%= notice %></p>


<h1 class='title'>Unique Greek Letter Inventory</h1>
<div class='top-header'>
  Top Letters
</div>
<table class='table top-letters'>
  <thead>
    <tr>
      <th>Add Set</th>
      <th>Letter</th>
      <th>Color</th>
      <th>Count</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @letters[:top_letters].each do |letter| %>
        <tr>
          <td>
            <%= link_to letter, method: :add_set, class: 'btn btn-default' do %>
              <i class='glyphicon glyphicon-plus'></i>
            <% end %>
          </td>
          <td><%= letter.name %></td>
          <td><%= letter.color %></td>
          <td><%= letter.number %></td>
          <td><%= link_to edit_letter_path(letter), class: 'btn btn-default' do %>
            <i class='glyphicon glyphicon-pencil'></i>
            <% end %>
          </td>
          <td>
            <%= link_to letter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
              <i class='glyphicon glyphicon-remove'></i>
            <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

