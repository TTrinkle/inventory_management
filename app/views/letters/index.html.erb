<p id="notice"><%= notice %></p>

<h1>Letter Inventory</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Letter</th>
      <th>Color</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Front</td>
    </tr>
    <% @letters.each do |letter| %>
      <% if letter.position == 'front' %>
        <tr>
          <td><%= letter.name %></td>
          <td><%= letter.color %></td>
          <td><%= letter.number %></td>
          <!-- <td><%= link_to 'Show', letter %></td> -->
          <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
          <!-- <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    <% end %>
    <tr>
      <td>Back</td>
    </tr>
    <% @letters.each do |letter| %>
      <% if letter.position == 'back' %>
        <tr>
          <td><%= letter.name %></td>
          <td><%= letter.color %></td>
          <td><%= letter.number %></td>
          <!-- <td><%= link_to 'Show', letter %></td> -->
          <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
          <!-- <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

