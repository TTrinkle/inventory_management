    <%= f.collection_select(:shirt_size, Article::SHIRT_SIZES, :to_s, :to_s) %>
  </div>
  <div class="field">
    <%= f.label :shirt_color %><br>
    <%= f.text_field :shirt_color %>
  </div>
  <div class="field">
    <%= f.label :letter_1 %><br>
    <%= f.collection_select(:letter_1, Article::LETTER_OPTIONS, :to_s, :to_s) %>
  </div>
  <div class="field">
    <%= f.label :letter_2 %><br>
    <%= f.collection_select(:letter_2, Article::LETTER_OPTIONS, :to_s, :to_s) %>
  </div>
  <div class="field">
    <%= f.label :letter_3 %><br>
    <%= f.collection_select(:letter_3, Article::OPTIONAL_LETTER_OPTIONS, :to_s, :to_s) %>
  </div>
  <div class="field">
    <%= f.label :top_color %><br>
    <%= f.text_field :top_color %>
  </div>
  <div class="field">
    <%= f.label :bottom_color %><br>
    <%= f.text_field :bottom_color %>
  </div>
