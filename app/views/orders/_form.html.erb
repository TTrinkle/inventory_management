  </div>
  <div class="field">
    <%= f.label :order_code %><br>
    <%= f.text_field :order_code %>
  </div>
  <div class="field">
    <%= f.label :order_total %><br>
    <%= f.text_field :order_total %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.select :quantity, (1..100) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
